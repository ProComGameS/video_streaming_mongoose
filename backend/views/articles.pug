doctype html
html
    head
        link(rel="icon", href="/favicon.ico")
        title Список статей
        link(rel="stylesheet", href="/styles.css")

    body(class=theme)
        if username
            p Привіт, #{username}!
        a(href='/toggle-theme', class='theme-toggle') Перемкнути тему
        h1 Список статей
        ul
            each article in articles
                li
                    a(href=`/articles/${article.id}`) #{article.title}
